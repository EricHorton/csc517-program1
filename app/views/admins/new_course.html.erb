<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<%= bootstrap_form_for @course, url: '/admins/create_course', html: { method: :post } do |f| %>
    <% label = 'Filter'; label += " - #{params[:like]}" if params[:like] && !params[:like].empty? %>
    <%= f.text_field :coursenumber, :placeholder => 'Course Number' %>

    <%= f.text_field :title, :placeholder => 'Title' %>

    <%= f.text_area :description, :placeholder => 'Description' %>

    <%= f.date_field :start_date, :placeholder => 'Start Date' %>

    <%= f.date_field :end_date, :placeholder => 'End Date' %>

    <%= f.number_field :instructor_id, :placeholder => 'Instructor id' %>


    <%= f.submit 'Add' %>
<% end %>