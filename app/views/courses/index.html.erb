<div class="well">
  <%= bootstrap_form_tag url: courses_path, method: 'get' do |f|%>
    <% label = 'Filter'; label += " - #{params[:like]}" if params[:like] && !params[:like].empty? %>
    <%= f.text_field 'like', label: label, placeholder: 'Filter by course number, title, instructor, description' %>
    <%= f.check_box 'status', label: 'Active', :checked => params[:status] ? to_bool(params[:status]) : true %>
    <%= f.submit 'Filter' %>
    <%= link_to 'Clear Filter', courses_path, class: 'btn btn-default' %>
  <% end %>
</div>

<% @courses.each do |c|  %>
  <div class="panel panel-default">
    <!-- Default panel heading -->
    <div class="panel-heading">
      <%= link_to c.coursenumber + ' - ' + c.title, course_path(c) %>
    </div>

    <!-- Table -->
    <table class="table">
      <tr>
        <td class="col-xs-1">Instructor</td><td class="col-xs-5"><%= c.instructor.name %></td>
      </tr>

      <tr>
        <td class="col-xs-1">Start Date</td><td class="col-xs-5"><%= c.start_date %></td>
      </tr>

      <tr>
        <td class="col-xs-1">End Date</td><td class="col-xs-5"><%= c.end_date %></td>
      </tr>

      <tr>
        <td class="col-xs-1">Status</td><td class="col-xs-5"><%= c.status ? 'Active' : 'Inactive' %></td>
      </tr>

      <tr>
        <td class="col-xs-1">Description</td><td class="col-xs-5"><%= c.description %></td>
      </tr>
    </table>
  </div>
<% end %>

