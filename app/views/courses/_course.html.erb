<div class="panel panel-default">
  <!-- Default panel heading -->
  <div class="panel-heading">
    <%= link_to course.coursenumber + ' - ' + course.title, course_path(course) %>
  </div>

  <!-- Table -->
  <table class="table">
    <tr>
      <td class="col-xs-1">Instructor</td><td class="col-xs-5"><%= course.instructor.name %></td>
    </tr>

    <tr>
      <td class="col-xs-1">Start Date</td><td class="col-xs-5"><%= course.start_date %></td>
    </tr>

    <tr>
      <td class="col-xs-1">End Date</td><td class="col-xs-5"><%= course.end_date %></td>
    </tr>

    <tr>
      <td class="col-xs-1">Status</td><td class="col-xs-5"><%= course.status ? 'Active' : 'Inactive' %></td>
    </tr>

    <tr>
      <td class="col-xs-1">Description</td><td class="col-xs-5"><%= course.description %></td>
    </tr>

    <% if (@auth_user.type == 'Admin') %>
    <tr>
      <td class="col-xs-1">
        <%= link_to("Delete Course", delete_course_path(course), :class => 'btn btn-default') %>
      </td>
      <td class="col-xs-1">
        <%= link_to("Edit Course", edit_course_path(course), :class => 'btn btn-default') %>
      </td>
      <td class="col-xs-1">
        <%= link_to("Post Grades", new_grade_path(course), :class => 'btn btn-default') %>
      </td>
      <td class="col-xs-1">
        <%= link_to("Add Students", enrollment_path(course), :class => 'btn btn-default') %>
      </td>
      <td class="col-xs-1">
        <%= link_to("Remove Students", history_path(course), :class => 'btn btn-default') %>
      </td>
      <td class="col-xs-1">
        <%= link_to("Add/Edit Course Material", course_material_index_path(course), :class => 'btn btn-default') %>
      </td>
    </tr>

    <% end %>
  </table>
</div>