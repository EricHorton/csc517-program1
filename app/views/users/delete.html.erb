<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="users delete">
  <h2>Delete User</h2>

  <% if @user.type == 'Admin' || @user.id == session[:user_id]%>
      <div class="one"><p>You cannot delete this user.</p></div>
  <% else %>
      <div class="one"><p>Are you sure you want to delete this user?</p></div>
      <div class="form-buttons">
        <%= link_to 'Delete', user_path, method: 'delete', class: 'btn btn-default' %>
      </div>
  <% end %>
</div>